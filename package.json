{
  "name": "bassline",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Getchyo groove on",
  "repository": {
    "type": "git",
    "url": "https://github.com/MercuricChloride/bassline.git"
  },
  "license": "AGPL-3.0-only",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "start": "pnpm --filter @bassline/web start",
    "dev": "./scripts/dev.sh",
    "dev:editor": "pnpm --filter @bassline/editor dev",
    "dev:all": "pnpm --parallel --stream dev",
    "build": "pnpm -r build",
    "build:types": "tsc -p tsconfig.build.json",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint packages/*/src/**/*.js",
    "lint:fix": "eslint packages/*/src/**/*.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "knip": "knip",
    "docs": "jsdoc -c jsdoc.config.json",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "setup:mcp": "sed \"s|<PROJECT_PATH>|$(pwd)|g\" .mcp.json.example > .mcp.json && echo 'Created .mcp.json with project path:' && cat .mcp.json",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.19.9",
    "@types/react": "^19.1.13",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^50.6.1",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.4",
    "knip": "^5.73.3",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  }
}

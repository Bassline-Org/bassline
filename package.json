{
  "name": "bassline",
  "version": "0.1.0",
  "private": true,
  "description": "Getchyo groove on",
  "repository": {
    "type": "git",
    "url": "https://github.com/MercuricChloride/bassline.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter @bassline/web dev",
    "cli:dev": "pnpm --filter @bassline/cli dev",
    "cli:init": "pnpm --filter @bassline/cli start init",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "cli": "pnpm --filter @bassline/cli start"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "typescript": "^5.3.3"
  }
}
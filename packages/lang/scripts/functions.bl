reducedContext: project system [ + make fn! reduce ]

fn: make fn! system [args body] [
    make fn! self (args) (body)
]

double: fn [x] [ * x 2]
print :double

hof: make fn! reducedContext [a] [
    make fn! self [b] [
        + a b
    ]
]

secure: make context!

foo: hof 10
bar: hof 20

print map (iota 10) :foo
commands: map
    (iota 10)
    (make fn! self [x] [ compose [ print (x)] ])
print commands
a: make task!
foo: make context!

in foo [
    something: 10
]

b: after a [ something: + something 20 ] foo

after b [
    print append "from foo " form something
] foo
after b [
    print append "from system " form something
] system

print "sleeping..."
after (sleep 1000) [
    print "yawning"
    schedule a
] self

after (sleep 1500) [ print "done" ] self
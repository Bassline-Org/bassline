use functions
use sockets

server: make ws-server! "0.0.0.0" 8080

in server [
    connection: fn [key] [
        print (append "Connection established with key: " key)
        in (get sessions key) [
            print "Sending welcome message to client"
            send [print "Welcome to the server"]
        ]
    ]
]

open server

after (sleep 20000) [
    close server
    print "Server closed"
] system
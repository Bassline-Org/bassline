url: "ws://localhost:8080"

fn: make pure-fn! [args body] [ make pure-fn! args body ]

client: make ws-client!

in client [
    open: (fn [] [
        write "hello from client"
    ])
    read: (fn [data] [
        print (append "read: " data)
    ])
    error: (fn [message] [
        print (append "error: " message)
    ])
]

in client [
    connect
]
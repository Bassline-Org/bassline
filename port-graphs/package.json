{
  "name": "port-graphs",
  "version": "1.0.0",
  "description": "Port-based graph data structure",
  "main": "./dist/index.js",
  "module": "./dist-browser/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist-browser/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist-browser/core.js",
      "require": "./dist/core.js",
      "types": "./dist/core.d.ts"
    },
    "./patterns/cells": {
      "import": "./dist-browser/patterns/cells/index.js",
      "require": "./dist/patterns/cells/index.js",
      "types": "./dist/patterns/cells/index.d.ts"
    },
    "./patterns/functions/numeric": {
      "import": "./dist-browser/patterns/functions/numeric.js",
      "require": "./dist/patterns/functions/numeric.js",
      "types": "./dist/patterns/functions/numeric.d.ts"
    },
    "./meta/routing": {
      "import": "./dist-browser/patterns/meta/routing.js",
      "require": "./dist/patterns/meta/routing.js",
      "types": "./dist/patterns/meta/routing.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "build:browser": "tsc -p tsconfig.browser.json",
    "build:all": "npm run build && npm run build:browser",
    "dev": "tsc --watch",
    "dev:browser": "tsc -p tsconfig.browser.json --watch",
    "test": "vitest --run"
  },
  "keywords": [
    "graph",
    "ports",
    "dataflow"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@types/lodash": "^4.17.20",
    "lodash": "^4.17.21",
    "ts-pattern": "^5.8.0",
    "zod": "^4.1.5"
  }
}

{
  "name": "Bassline",
  "scopeName": "source.bassline",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#pattern-variables" },
    { "include": "#wildcards" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [{
        "name": "comment.line.semicolon.bassline",
        "match": ";.*$"
      }]
    },
    "strings": {
      "patterns": [{
        "name": "string.quoted.double.bassline",
        "begin": "\"",
        "end": "\"",
        "patterns": [{
          "name": "constant.character.escape.bassline",
          "match": "\\\\."
        }]
      }]
    },
    "numbers": {
      "patterns": [{
        "name": "constant.numeric.bassline",
        "match": "\\b-?[0-9]+\\.?[0-9]*\\b"
      }]
    },
    "keywords": {
      "patterns": [{
        "name": "keyword.control.bassline",
        "match": "\\b(insert|query|rule|where|produce|not|in)\\b"
      }]
    },
    "pattern-variables": {
      "patterns": [{
        "name": "variable.parameter.bassline",
        "match": "\\?[a-zA-Z][a-zA-Z0-9_-]*"
      }]
    },
    "wildcards": {
      "patterns": [{
        "name": "keyword.operator.bassline",
        "match": "\\*"
      }]
    },
    "identifiers": {
      "patterns": [{
        "name": "entity.name.word.bassline",
        "match": "\\b[a-zA-Z][a-zA-Z0-9_-]*\\b"
      }]
    }
  }
}

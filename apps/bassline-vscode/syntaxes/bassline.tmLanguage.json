{
    "name": "Bassline",
    "scopeName": "source.bassline",
    "patterns": [
      { "include": "#comments" },
      { "include": "#strings" },
      { "include": "#numbers" },
      { "include": "#keywords" },
      { "include": "#functions" },
      { "include": "#operators" },
      { "include": "#words" }
    ],
    "repository": {
      "comments": {
        "patterns": [{
          "name": "comment.line.semicolon.bassline",
          "match": ";.*$"
        }]
      },
      "strings": {
        "patterns": [{
          "name": "string.quoted.double.bassline",
          "begin": "\"",
          "end": "\"",
          "patterns": [{
            "name": "constant.character.escape.bassline",
            "match": "\\\\."
          }]
        }]
      },
      "numbers": {
        "patterns": [{
          "name": "constant.numeric.bassline",
          "match": "\\b-?[0-9]+\\.?[0-9]*\\b"
        }]
      },
      "keywords": {
        "patterns": [{
          "name": "keyword.control.bassline",
          "match": "\\b(if|either|while|loop|foreach|forever|func|make|do|try|break|continue|return)\\b"
        }]
      },
      "functions": {
        "patterns": [{
          "name": "entity.name.function.bassline",
          "match": "\\b(print|probe|mold|load|defgadget|gadget|on|emit|listen|connect|spawn|shell|wait|append|reduce|compose|object!)\\b"
        }]
      },
      "operators": {
        "patterns": [
          {
            "name": "keyword.operator.arithmetic.bassline",
            "match": "\\+|-|\\*|/|mod"
          },
          {
            "name": "keyword.operator.comparison.bassline",
            "match": "=|<|>|<=|>="
          },
          {
            "name": "keyword.operator.logical.bassline",
            "match": "\\b(and|or|not)\\b"
          }
        ]
      },
      "words": {
        "patterns": [
          {
            "name": "variable.other.setword.bassline",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_-]*:"
          },
          {
            "name": "variable.other.getword.bassline",
            "match": ":[a-zA-Z_][a-zA-Z0-9_-]*"
          },
          {
            "name": "constant.other.litword.bassline",
            "match": "'[a-zA-Z_][a-zA-Z0-9_-]*"
          },
          {
            "name": "entity.name.tag.refinement.bassline",
            "match": "/[a-zA-Z_][a-zA-Z0-9_-]*"
          }
        ]
      }
    }
  }